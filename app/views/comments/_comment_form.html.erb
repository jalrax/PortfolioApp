<% unless current_user.is_a? GuestUser %>
  <%= form_with(model: @comment, local: true, url: '#') do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 5, class: 'form-control', placeholder: 'Comment' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
